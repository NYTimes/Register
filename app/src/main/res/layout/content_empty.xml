<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/empty_view"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:paddingStart="@dimen/recycler_empty_padding"
    android:paddingEnd="@dimen/recycler_empty_padding"
    android:orientation="vertical">

    <ImageView
        android:layout_width="@dimen/recycler_empty_icon_size"
        android:layout_height="@dimen/recycler_empty_icon_size"
        app:srcCompat="@drawable/ic_shopping" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/recycler_empty_title_margin_top"
        android:layout_marginBottom="@dimen/recycler_empty_title_margin_top"
        android:gravity="center"
        android:textColor="@android:color/white"
        android:textSize="@dimen/recycler_empty_title_size"
        android:text="@string/empty_message_title" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:maxWidth="400dp"
        android:textColor="?android:textColorSecondary"
        android:text="@string/empty_message_text" />

</LinearLayout>