<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingBottom="12dp">

    <include
        android:id="@+id/isBillingSupported"
        style="@style/Config.Row"
        layout="@layout/layout_config_spinner" />

    <include
        android:id="@+id/getBuyIntent"
        style="@style/Config.Row"
        layout="@layout/layout_config_spinner" />

    <include
        android:id="@+id/buy"
        style="@style/Config.Row"
        layout="@layout/layout_config_spinner" />

    <include
        android:id="@+id/getPurchases"
        style="@style/Config.Row"
        layout="@layout/layout_config_spinner" />

    <include
        android:id="@+id/getSkuDetails"
        style="@style/Config.Row"
        layout="@layout/layout_config_spinner" />

    <include
        android:id="@+id/consumePurchase"
        style="@style/Config.Row"
        layout="@layout/layout_config_spinner" />

    <include
        android:id="@+id/getBuyIntentToReplaceSkus"
        style="@style/Config.Row"
        layout="@layout/layout_config_spinner" />

    <include
        android:id="@+id/replace"
        style="@style/Config.Row"
        layout="@layout/layout_config_spinner" />

</LinearLayout>
